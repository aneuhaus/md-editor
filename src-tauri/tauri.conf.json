{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Markdown",
  "version": "0.1.0",
  "identifier": "com.markdown.mdeditor",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "",
        "width": 1000,
        "height": 800,
        "resizable": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": { "x": 13, "y": 21 }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
